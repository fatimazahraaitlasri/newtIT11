{% extends 'base.html.twig' %}

{% block title %}Profil{% endblock %}

{% block body %}

    <h1 class="text-3xl font-bold mb-6">Profil</h1>

    <div class="w-3/4 bg-white p-6 rounded shadow">
        <table class="w-full table-auto">
            <tbody>
                <tr>
                    <th class="border p-2">Id</th>
                    <th class="border p-2">Email</th>
                    <th class="border p-2">IsVerified</th>
                    <th class="border p-2">Update</th>
                    <th class="border p-2">Delete</th>
                </tr>
                
                <tr>
                    <td class="border p-2 text-center">{{ user.email }}</td>
                    <td class="border p-2 text-center">{{ user.id }}</td>
                    <td class="border p-2 text-center">{{ user.isVerified ? 'Yes' : 'No' }}</td>
                    <td>
                        <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="ml-12">
                            <svg xmlns="http://www.w3.org/2000/svg" height="16" width="16" viewBox="0 0 512 512">
                                <path d="M441 58.9L453.1 71c9.4 9.4 9.4 24.6 0 33.9L424 134.1 377.9 88 407 58.9c9.4-9.4 24.6-9.4 33.9 0zM209.8 256.2L344 121.9 390.1 168 255.8 302.2c-2.9 2.9-6.5 5-10.4 6.1l-58.5 16.7 16.7-58.5c1.1-3.9 3.2-7.5 6.1-10.4zM373.1 25L175.8 222.2c-8.7 8.7-15 19.4-18.3 31.1l-28.6 100c-2.4 8.4-.1 17.4 6.1 23.6s15.2 8.5 23.6 6.1l100-28.6c11.8-3.4 22.5-9.7 31.1-18.3L487 138.9c28.1-28.1 28.1-73.7 0-101.8L474.9 25C446.8-3.1 401.2-3.1 373.1 25zM88 64C39.4 64 0 103.4 0 152V424c0 48.6 39.4 88 88 88H360c48.6 0 88-39.4 88-88V312c0-13.3-10.7-24-24-24s-24 10.7-24 24V424c0 22.1-17.9 40-40 40H88c-22.1 0-40-17.9-40-40V152c0-22.1 17.9-40 40-40H200c13.3 0 24-10.7 24-24s-10.7-24-24-24H88z"/>
                            </svg>
                        </a>
                    </td>
                    <td>{{ include('user/_delete_form.html.twig') }}</td>
                </tr>
            </tbody>
        </table>

        <div class="mt-6">
            <h1 class="text-3xl font-bold mb-6">User Posts</h1>
             

    <div class="max-w-screen-md mx-auto bg-white p-6 rounded shadow">
        <a href="{{ path('app_post_new') }}" class="bg-black text-white px-4 py-2 rounded">Add new Post</a>
    </div>

            <div class="w-full  bg-white p-6 rounded shadow">
                <h2 class="text-xl font-bold mb-4 ">Posts by   :  {{ user.email }}</h2>

                <div class="flex flex-col gap-3  justify-center items-center  ">
                    {% for post in posts %}
                    <div class="bg-black p-10 text-center">
                     <a href="{{ path('app_post_edit',{'id': post.id}) }}" class="">
                    <svg xmlns="http://www.w3.org/2000/svg" height="16" width="16" viewBox="0 0 512 512"><path fill="#f5f7fa" d="M362.7 19.3L314.3 67.7 444.3 197.7l48.4-48.4c25-25 25-65.5 0-90.5L453.3 19.3c-25-25-65.5-25-90.5 0zm-71 71L58.6 323.5c-10.4 10.4-18 23.3-22.2 37.4L1 481.2C-1.5 489.7 .8 498.8 7 505s15.3 8.5 23.7 6.1l120.3-35.4c14.1-4.2 27-11.8 37.4-22.2L421.7 220.3 291.7 90.3z"/></svg>
                    </a>
                    <div>{{ include('post/_delete_form.html.twig') }}</div>
                   
                   
                        <h1 class="text-xl text-white font-bold mb-6">{{ post.title }}</h1>
                        <div class="text-white">{{ post.content }}</div>
                    </div>
                    
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>

{% endblock %}
