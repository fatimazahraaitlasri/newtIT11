{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}

    <h1 class="text-3xl font-bold mb-6">User</h1>

    <div class="max-w-screen-md mx-auto bg-white p-6 rounded shadow">
        <table class="w-full table-auto">
            <tbody>
                <tr>
                    <th class="border p-2">Id</th>
                       <th class="border p-2">Email</th>
                    <th class="border p-2">IsVerified</th>

                </tr>
                
                 
                    <td class="border p-2">{{ user.email }}</td>
                    <td class="border p-2">{{ user.id }}</td>
                    <td class="border p-2">{{ user.isVerified ? 'Yes' : 'No' }}</td>
                    <td><a href="{{ path('app_user_edit', {'id': user.id}) }}" class="text-blue-500 hover:underline mr-4">Edit</a></td>
                    <td>{{ include('user/_delete_form.html.twig') }}</td>

                
                
                </tr>
            </tbody>
        </table>

        <div class="mt-6">
            <a href="{{ path('app_user_index') }}" class="text-blue-500 hover:underline mr-4">Back to list</a>
        </div>
    </div>
{% endblock %}
